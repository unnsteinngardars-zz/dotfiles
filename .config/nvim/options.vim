set number
highlight lineNr ctermfg=white
set numberwidth=3
let mapleader = "-"
let maplocalleader = "\\"
set encoding=utf8
syntax enable
set signcolumn=yes

" prompt suggestions when in command mode
set wildmenu
set wildmode=longest:full,full

" when creating a new pane, make it split to the right and down
set splitright
set splitbelow
